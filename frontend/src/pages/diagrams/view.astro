---
import Layout from '../../layouts/Layout.astro';
import DiagramView from '../../components/DiagramView.vue';

const id = Astro.url.searchParams.get('id') || null;
---

<Layout>
  <div class="container mx-auto px-4 py-8">
    <a href="/diagrams" class="text-blue-400 hover:underline mb-4 inline-block">&larr; Back to Diagrams</a>
    <h1 class="text-4xl font-bold mb-8">Diagram {id}</h1>
    <DiagramView client:load id={id} />
  </div>
</Layout>